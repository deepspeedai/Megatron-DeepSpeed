{
  "train_batch_size" : CONFIG_BATCH_SIZE,
  "train_micro_batch_size_per_gpu": CONFIG_MBSIZE,
  "steps_per_print": LOG_INTERVAL,

  "zero_optimization": {
    "stage": ZERO_STAGE,
    "elastic_checkpoint": true
  },

  "gradient_clipping": 1.0,
  "prescale_gradients": PRESCALE_GRAD,

  "fp16": {
    "enabled": true,
    "loss_scale": 0,
    "loss_scale_window": 500,
    "hysteresis": 2,
    "min_loss_scale": 1,
    "initial_scale_power": 11
  },

  "wall_clock_breakdown" : false,
  "dataloader_drop_last": true,
  "data_efficiency": {
    "enabled": true,
    "seed": DATA_EFFICIENCY_SEED,
    "data_sampling": {
      "enabled": true,
      "num_workers": DATA_SAMPLING_NUM_WORKERS,
      "curriculum_learning": {
        "enabled": true,
        "data_cluster_path": "CONFIG_CL_CLUSTER_PATH",
        "curriculum_metrics": {
          "CL_SEQLEN_METRIC_NAME": {
            "difficulty_type": "value",
            "clustering_type": "single_cluster",
            "min_difficulty": CONFIG_CL_SEQLEN_MIN,
            "max_difficulty": CONFIG_CL_SEQLEN_MAX,
            "schedule_type": "fixed_root",
            "schedule_config": {
              "total_curriculum_step": CONFIG_CL_SEQLEN_DURATION,
              "difficulty_step": 8,
              "root_degree": CONFIG_CL_SEQLEN_ROOT_DEGREE
            }
          },
          "vocabrarity": {
            "index_to_sample_path": "CONFIG_CL_VOCAB_SAMPLE_PATH",
            "index_to_metric_path": "CONFIG_CL_VOCAB_METRIC_PATH",
            "difficulty_type": "percentile",
            "clustering_type": "schedule_based",
            "min_difficulty": CONFIG_CL_VOCAB_MIN,
            "max_difficulty": CONFIG_CL_VOCAB_MAX,
            "schedule_type": "fixed_root",
            "schedule_config": {
              "total_curriculum_step": CONFIG_CL_VOCAB_DURATION,
              "difficulty_step": 1,
              "root_degree": CONFIG_CL_VOCAB_ROOT_DEGREE
            }
          }
        }
      }
    }
  }
}
