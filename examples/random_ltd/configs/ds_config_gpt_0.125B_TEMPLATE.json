        "randomltd_schedule": {
            "min_value": 256,
            "max_value": 2048,
            "schedule_type":"fixed_linear",
            "schedule_config": {
                "require_steps": 10682,
                "seq_per_step": 16,
                "saving_layer_tokens": -1
